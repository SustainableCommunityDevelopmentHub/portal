{
  "analysis": {
    "analyzer": {
      "sortable": {
        "tokenizer": "keyword",
        "filter": [ "strip_quotes", "strip_bracket", "icu_folding" ] 
      },
      "folding": {
        "tokenizer": "icu_tokenizer",
        "filter": [ "lowercase", "icu_folding" ]
      }, 
      "stemming": {
        "tokenizer": "icu_tokenizer",
        "filter": [ "lowercase", "stem", "icu_folding" ]
      }
    },
    "filter": {
      "strip_quotes": {
        "type": "pattern_replace",
        "pattern": "\"",
        "replacement": ""
      },
      "strip_bracket": {
        "type": "pattern_replace",
        "pattern": "\\[",
        "replacement": ""
      },
      "stem": {
        "type": "stemmer",
        "name": "porter2"
      }
    }
  },
  "index": {
    "max_result_window": 500000
  }
}