{
  "analysis": {
    "analyzer": {
      "sortable": {
        "tokenizer": "keyword",
        "filter": [ "strip_quotes", "strip_bracket", "asciifolding" ] 
      },
      "folding": {
        "tokenizer": "standard",
        "filter": [ "lowercase", "asciifolding" ]
      }, 
      "stemming": {
        "tokenizer": "standard",
        "filter": [ "lowercase", "asciifolding", "stem" ]
      }
    },
    "filter": {
      "strip_quotes": {
        "type": "pattern_replace",
        "pattern": "\"",
        "replacement": ""
      },
      "strip_bracket": {
        "type": "pattern_replace",
        "pattern": "\\[",
        "replacement": ""
      },
      "stem": {
        "type": "stemmer",
        "name": "porter2"
      }
    }
  },
  "index": {
    "max_result_window": 500000
  }
}