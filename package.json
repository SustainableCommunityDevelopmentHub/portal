{
  "version": "0.0.0",
  "private": true,
  "name": "portal",
  "description": "The Getty Research Portal",
  "repository": "https://stash.getty.edu/projects/GRIIS/repos/portal",
  "license": "MIT",
  "devDependencies": {
    "karma": "^0.13.13",
    "karma-chrome-launcher": "^0.2.1",
    "karma-jasmine": "^0.3.6",
    "protractor": "~2.5.1",
    "http-server": "^0.8.5",
    "tmp": "0.0.28",
    "bower": "^1.6.3",
    "shelljs": "^0.5.3"
  },
  "scripts": {
    "postinstall": "bower install",

    "init-es": "npm run restart-es && bash scripts/init_es.sh",

    "start-es": "sudo /etc/init.d/elasticsearch start",
    "stop-es": "sudo /etc/init.d/elasticsearch stop",
    "restart-es": "sudo /etc/init.d/elasticsearch restart",

    "start": "npm run start-es && http-server -a 0.0.0.0 -p 8000",

    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js",
    "test-single-run": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
