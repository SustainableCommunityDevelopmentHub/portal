{
  "version": "0.0.0",
  "private": true,
  "name": "portal",
  "description": "The Getty Research Portal",
  "repository": "https://stash.getty.edu/projects/GRIIS/repos/portal",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.1",
    "express": "^4.13.3"
  },
  "devDependencies": {
    "bower": "^1.6.3",
    "http-server": "^0.8.5",
    "karma": "^0.13.14",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "~0.1.6",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-safari-launcher": "~0.1.1",
    "phantomjs": "^2.1.3",
    "protractor": "~2.5.1",
    "shelljs": "^0.5.3",
    "tmp": "0.0.28"
  },
  "scripts": {
    "delete-all-containers": "docker rm $(docker ps --no-trunc -aq)",
    "preinstall": "npm install -g bower",
    "init-es": "sudo bash scripts/init-es.sh",
    "start-es": "sudo /etc/init.d/elasticsearch start",
    "stop-es": "sudo /etc/init.d/elasticsearch stop",
    "restart-es": "sudo /etc/init.d/elasticsearch restart",
    "start": "node server.js",
    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.config.js",
    "test-single-run": "node node_modules/karma/bin/karma start test/karma.config.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor.config.js",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
